<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="WeatherStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>


    <style name="NewsStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/very_small_text_size</item>
    </style>

    <style name="TextColor">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/very_small_text_size</item>
    </style>
    <style name="TimeStyle" parent="TextColor">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>
    <style name="DateStyle" parent="TextColor">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

</resources>
